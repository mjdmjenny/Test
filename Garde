package cjDay7;
import java.util.Scanner;
public class Grade {

	public static void main(String[] args) {
		Scanner Marks = new Scanner(System.in);
		System.out.println("Enter the Marks:: ");
		int marks = Marks.nextInt();
		if(marks >=0 && marks<=100){
		if(marks < 40){
		System.out.println("The grade for the respective marks is F");	
		}else if(marks >=40 && marks <50){
			System.out.println("The grade for the respective marks is E");	
		}
		else if(marks >=50 && marks <60){
			System.out.println("The grade for the respective marks is D");	
		}	
		else if(marks >=60 && marks <70){
			System.out.println("The grade for the respective marks is C");	
		}
		else if(marks >=70 && marks <80){
			System.out.println("The grade for the respective marks is B");	
		}
		else if(marks >=80 && marks <90){
			System.out.println("The grade for the respective marks is A");	
		}
		else if(marks >=90 && marks <100){
			System.out.println("The grade for the respective marks is A+");	
		}
		else if(marks ==100){
			System.out.println("The grade for the respective marks is A++");	
		}
		}
		else{
			System.out.println("Please enter valid marks");
			}
		
	}

}
